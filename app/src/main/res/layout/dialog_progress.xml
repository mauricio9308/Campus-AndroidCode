<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/vertical_large_separation"
    android:paddingBottom="@dimen/vertical_large_separation"
    android:paddingRight="@dimen/vertical_large_separation"
    android:paddingLeft="@dimen/vertical_large_separation"
    android:orientation="vertical">

    <ProgressBar
        android:layout_marginBottom="@dimen/vertical_base_separation"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_progress"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@android:color/black"/>

</LinearLayout>